{
  "name": "infrrd",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "core-js": "^3.3.2",
    "node-sass": "^7.0.0",
    "nodemon": "^1.19.4",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "recompose": "^0.30.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "semantic-ui-react": "^0.88.1"
  },
  "scripts": {
    "clean": "rm -rf dist && rm -rf build",
    "distclean": "npm run clean && rm -rf node_modules",
    "build-css": "node-sass src/ -o src/scss/out",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "prebuild": "npm run clean",
    "build": "npm run build-css && GENERATE_SOURCEMAP=false react-scripts build && mv build dist",
    "local": "npm run watch-css & react-scripts start",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
